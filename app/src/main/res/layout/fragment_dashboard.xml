<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_curos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cursos"
            android:textColor="@android:color/black"
            android:textSize="19sp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclergenerico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_curos"
            android:clickable="true"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tv_notas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclergenerico"
            android:layout_marginTop="10dp"
            android:text="Notas"
            android:textColor="@android:color/black"
            android:textSize="19sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclergenerico2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_notas"
            android:clickable="true"
            android:orientation="vertical" />

        <com.victor.loading.rotate.RotateLoading
            android:id="@+id/rotateloading"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:loading_color="@color/colorPrimaryDark"
            app:loading_width="5dp" />

    </RelativeLayout>

</FrameLayout>